# core variables
[core]
  ; Don't trust file modes
  filemode = false
	editor = /usr/bin/vim


[user]
  name = greggreg
  email = greggreg@itsgreggreg.com

[alias]
  sshow = "!f() { git stash show stash^{/$*} -p; }; f"
  sapply = "!f() { git stash apply stash^{/$*}; }; f"
  s = "status"
  co = "checkout"
  corb = "checkout --track"
  cm = "commit"
  aa = "add ."
  bn = "checkout -b"
  bd = "branch -d"
  l = "log --oneline"
  ll = "log --oneline --decorate --graph --all"

[color]
  ui = auto
